<form method="post"
      action="{{ path('questions_delete', {'id': question.id}) }}"
      onsubmit="return confirm('Voulez vous supprimer la question ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
    <button class="btn btn-danger"><i class="fas fa-times text-white"></i></button>
</form>
